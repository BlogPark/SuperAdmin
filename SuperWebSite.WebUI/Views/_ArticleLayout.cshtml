<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<title>@ViewBag.Title</title>
        <meta name="keywords" content="@ViewBag.Keywords" />
		<meta name="description" content="@ViewBag.Description">
		<!-- Mobile Meta -->
		<meta name="viewport" content="width=device-width, initial-scale=1.0">

		<!-- Favicon -->
		<link rel="shortcut icon" href="/images/favicon.ico">

		<!-- Web Fonts -->
		<!-- Bootstrap core CSS -->
		<link href="@Url.Content("/bootstrap/css/bootstrap.css")" rel="stylesheet">

		<!-- Font Awesome CSS -->
		<link href="@Url.Content("/fonts/font-awesome/css/font-awesome.css")" rel="stylesheet">

		<!-- Fontello CSS -->
		<link href="@Url.Content("/fonts/fontello/css/fontello.css")" rel="stylesheet">

		<!-- Plugins -->
		<link href="@Url.Content("/plugins/magnific-popup/magnific-popup.css")" rel="stylesheet">
		<link href="@Url.Content("/css/animations.css")" rel="stylesheet">
		<link href="@Url.Content("/plugins/owl-carousel/owl.carousel.css")" rel="stylesheet">
		<!-- iDea core CSS file -->
		<link href="@Url.Content("/css/style.css")" rel="stylesheet">
		<!-- Color Scheme (In order to change the color scheme, replace the red.css with the color scheme that you prefer)-->
		<link href="@Url.Content("/css/skins/red.css")" rel="stylesheet">
		<!-- Custom css --> 
		<link href="@Url.Content("/css/custom.css")" rel="stylesheet">
	</head>

	<!-- body classes: 
			"boxed": boxed layout mode e.g. <body class="boxed">
			"pattern-1 ... pattern-9": background patterns for boxed layout mode e.g. <body class="boxed pattern-1"> 
	-->
	<body>
		<!-- scrollToTop -->
		<!-- ================ -->
		<div class="scrollToTop"><i class="icon-up-open-big"></i></div>

		<!-- page wrapper start -->
		<!-- ================ -->
		<div class="page-wrapper">
			@Html.Action("PageTop", "DivisionArea", new { area = "" })
			@Html.Action("PageNav", "DivisionArea", new { area = "" })
			@Html.Action("PageArticleIntro", "DivisionArea", new { area = "" })

			<!-- main-container start -->
			<!-- ================ -->
			<section class="main-container">
                @RenderBody()			
			</section>
			<!-- main-container end -->
			@Html.Action("PageSectionPart", "DivisionArea", new { area = "" })
			<!-- footer start -->
			<footer id="footer">
				@Html.Action("pageFooter", "DivisionArea", new { area = "" })
                @Html.Action("PageSubFooter", "DivisionArea", new { area = "" })
			</footer>
			<!-- footer end -->
		</div>
		<!-- page-wrapper end -->

		<!-- JavaScript files placed at the end of the document so the pages load faster
		================================================== -->
		<!-- Jquery and Bootstap core js files -->
		<script type="text/javascript" src="@Url.Content("/plugins/jquery.min.js")"></script>
		<script type="text/javascript" src="@Url.Content("/bootstrap/js/bootstrap.min.js")"></script>

		<!-- Modernizr javascript -->
		<script type="text/javascript" src="@Url.Content("/plugins/modernizr.js")"></script>

		<!-- Isotope javascript -->
		<script type="text/javascript" src="@Url.Content("/plugins/isotope/isotope.pkgd.min.js")"></script>

		<!-- Owl carousel javascript -->
		<script type="text/javascript" src="@Url.Content("/plugins/owl-carousel/owl.carousel.js")"></script>

		<!-- Magnific Popup javascript -->
		<script type="text/javascript" src="@Url.Content("/plugins/magnific-popup/jquery.magnific-popup.min.js")"></script>

		<!-- Appear javascript -->
		<script type="text/javascript" src="@Url.Content("/plugins/jquery.appear.js")"></script>

		<!-- Count To javascript -->
		<script type="text/javascript" src="@Url.Content("/plugins/jquery.countTo.js")"></script>

		<!-- Parallax javascript -->
		<script src="@Url.Content("/plugins/jquery.parallax-1.1.3.js")"></script>

		<!-- Contact form -->
		<script src="@Url.Content("/plugins/jquery.validate.js")"></script>

		<!-- Initialization of Plugins -->
		<script type="text/javascript" src="@Url.Content("/js/template.js")"></script>

		<!-- Custom Scripts -->
		<script type="text/javascript" src="@Url.Content("/js/custom.js")"></script>

	</body>
</html>