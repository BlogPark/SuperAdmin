@using Webdiyer.WebControls.Mvc
@model SuperAdmin.WebUI.Areas.AdminArea.Models.ProductIndexViewModel
@{
    Layout = "~/Views/_Layout.cshtml";
}
<div class="container">
    <div class="row">
        <div id="content" class="col-lg-12">
            <!-- PAGE HEADER-->
            <div class="row">
                <div class="col-sm-12">
                    <div class="page-header">
                        <!-- BREADCRUMBS -->
                        <ul class="breadcrumb">
                            <li>
                                <i class="fa fa-home"></i>
                                <a href="index.html">Home</a>
                            </li>
                            <li>
                                <a href="#">产品管理</a>
                            </li>
                            <li>产品管理</li>
                        </ul>
                        <!-- /BREADCRUMBS -->
                        <div class="clearfix">
                            <h3 class="content-title pull-left">产品管理</h3>
                        </div>
                        <div class="description"></div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-11">
                    <div class="btn-group hidden-xs pull-right invoice-btn-group">
                        <p class="btn-toolbar">
                            <a class="btn btn-primary" data-toggle="modal" href="#" id="addnew"><i class="fa fa-search"></i>&nbsp;查询条件预留</a>
                        </p>
                    </div>
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="row" id="tabdiv">
                        <table class="table table-striped table-bordered" id="menutab">
                            <thead>
                                <tr>
                                    <th class="text-center">类别编号</th>
                                    <th class="text-center">产品名称</th>
                                    <th class="text-center">产品描述</th>
                                    <th class="text-center">添加人</th>
                                    <th class="text-center">状        态</th>
                                    <th class="text-center">操        作</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.productlist)
                                {
                                    <tr id="tr@(item.ID)" class="text-center">
                                        <td>@item.ID</td>
                                        <td>@item.ProductName</td>
                                        <td>@item.ProductDescription</td>
                                        <td>@item.AddUserName</td>
                                        <td name="@(item.ProductStatus)">
                                            @item.ProductStatus
                                        </td>
                                        <td>
                                            <p class="btn-toolbar">
                                                @if (item.ProductStatus == 1)
                                                {
                                                    <button class="btn btn-danger" data-toggle="modal" onclick="delcate(@item.ID)" ><i class="fa fa-times-circle"></i>&nbsp; 禁 用</button>
                                                }
                                            </p>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="row center col-xs-12 mycss">
                        @Html.Pager(Model.productlist, new PagerOptions { PageIndexParameterName = "page", ShowPageIndexBox = false, PageIndexBoxType = PageIndexBoxType.DropDownList, ShowGoButton = false })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section myscript{
    <script type="text/javascript">
        $(function () {
            App.init(); //Initialise plugins and elements
        });
    </script>
}