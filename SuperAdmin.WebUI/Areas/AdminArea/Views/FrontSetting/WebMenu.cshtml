<div class="container">
    <div class="row">
        <div id="content" class="col-lg-12">
            <!-- PAGE HEADER-->
            <div class="row">
                <div class="col-sm-12">
                    <div class="page-header">
                        <!-- BREADCRUMBS -->
                        <ul class="breadcrumb">
                            <li>
                                <i class="fa fa-home"></i>
                                <a href="index.html">Home</a>
                            </li>
                            <li>
                                <a href="#">网站基础信息管理</a>
                            </li>
                            <li>网站菜单管理</li>
                        </ul>
                        <!-- /BREADCRUMBS -->
                        <div class="clearfix">
                            <h3 class="content-title pull-left">网站菜单管理</h3>
                        </div>
                        <div class="description"></div>
                    </div>
                </div>
            </div>
            <!-- /PAGE HEADER -->
            <div class="row">
                <div class="col-sm-11">
                    <div class="btn-group hidden-xs pull-right invoice-btn-group">
                        <p class="btn-toolbar">
                            <a class="btn btn-primary" data-toggle="modal" href="#box-config" id="addnew"><i class="fa fa-plus"></i>添加新菜单</a>
                        </p>
                    </div>
                </div>
            </div>

            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="row" id="tabdiv">
                        <table class="table table-striped table-bordered" id="menutab">
                            <thead>
                                <tr>
                                    <th>菜单编号</th>
                                    <th>菜单名称</th>
                                    <th style="display:none">上级ID</th>
                                    <th>上级菜单</th>
                                    <th>菜单描述</th>
                                    <th>菜单链接</th>
                                    <th>菜单状态</th>
                                    <th>排序</th>
                                    <th>区域名称</th>
                                    <th>控制器名称</th>
                                    <th>Action名称</th>
                                    <th>菜单Icon</th>
                                    <th>引用图片</th>
                                    <th>引用文字</th>
                                    <th>编  辑</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.list)
                                {
                                    <tr id="tr@(item.ID)">
                                        <td>@item.ID</td>
                                        <td>@item.MenuName</td>
                                        <td  style="display:none">@item.FatherID</td>
                                        <td>@item.FatherName</td>
                                        <td>@item.MenuAlt</td>
                                        <td>@item.LinkUrl</td>
                                        <td name="@item.MenuStatus">
                                            <lable class="tip-bottom" data-original-title="@(item.MenuStatus == 0 ? "禁用" : "启用")">@item.MenuStatus</lable>
                                        </td>
                                        <td>@item.SortIndex</td>                                        
                                        <td>@item.AreaName</td>
                                        <td>@item.ControllerName</td>
                                        <td>@item.ActionName</td>
                                        <td>@item.MenuIcon</td>
                                        <td name="@item.QuoteImage">@if(!string.IsNullOrWhiteSpace(item.QuoteImage)){<img src="@item.QuoteImage" alt="" class="img-responsive"  style="width:120px"/>} </td>
                                        <td>@item.QuoteText</td>
                                        <td>
                                            <p class="btn-toolbar">
                                                <a class="btn btn-warning" data-toggle="modal" href="#box-config1" onclick="updatemassage(@item.ID)">修改</a>
                                                @*<button class="btn btn-danger">删除</button>*@
                                            </p>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@section myscript{
    <script type="text/javascript">
        $(function () {
            App.init(); //Initialise plugins and elements
            $("#fathermenu").change(function () {
                var changetext = $("#fathermenu").find("option:selected").text();
                var changeval = $("#fathermenu").val();
                $("#addmenu_FatherID").val(changeval);
                $("#addmenu_FatherName").val(changetext);
            });
            $("#fathermenu1").change(function () {
                var changetext = $("#fathermenu1").find("option:selected").text();
                var changeval = $("#fathermenu1").val();
                $("#updatemenu_FatherID").val(changeval);
                $("#updatemenu_FatherName").val(changetext);
            });
            $("#addmenu_MenuStatus").val($("input:radio[name=optionsRadios1]:checked").val());
            $("input:radio[name=optionsRadios1]").change(function () {
                var raval = $("input:radio[name=optionsRadios1]:checked").val();
                $("#addmenu_MenuStatus").val(raval);
            });         
            $("input:radio[name=optionsRadios2]").change(function () {
                var raval = $("input:radio[name=optionsRadios2]:checked").val();
                $("#updatemenu_MenuStatus").val(raval);
            });
            
        });
        function updatemassage(id) {
            $("#SingleMenu_Type").val(1);
            var dtr = $("#tr" + id).children('td');
            if (dtr) {
                var menuid = dtr.eq(0).html();
                var menuname = dtr.eq(1).html();
                var menufaid = dtr.eq(2).html();
                var menufaname = dtr.eq(3).html();
                var menualt = dtr.eq(4).html();
                var menulink = dtr.eq(5).html();
                var menustatus = dtr.eq(6).attr("name");
                var menusort = dtr.eq(7).html();
                var menuarea = dtr.eq(8).html();
                var menucon = dtr.eq(9).html();
                var menuaction = dtr.eq(10).html();
                var menuicon = dtr.eq(11).html();
                var qimage = dtr.eq(12).attr("name");
                var qtext = dtr.eq(13).html();
                $("#updatemenu_ID").val(menuid);
                $("#updatemenu_MenuName").val(menuname);
                $("#updatemenu_MenuAlt").val(menualt);
                $("#updatemenu_FatherID").val(menufaid);
                $("#updatemenu_FatherName").val(menufaname);
                $("#updatemenu_MenuStatus").val(menustatus);
                $("#updatemenu_LinkUrl").val(menulink);
                $("#updatemenu_AreaName").val(menuarea);
                $("#updatemenu_ControllerName").val(menucon);
                $("#updatemenu_ActionName").val(menuaction);
                $("#updatemenu_MenuIcon").val(menuicon);
                $("#updatemenu_SortIndex").val(menusort);
                $("#updatemenu_QuoteImage").val(qimage);
                $("#updatemenu_QuoteText").val(qtext);
                $("#fathermenu1 option[value=" + menufaid + "]").attr("selected", true);
                $("input:radio[name=optionsRadios2][value=" + menustatus + "]").attr("checked", true);
            }
        }
    </script>
}
