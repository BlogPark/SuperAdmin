@model SuperAdmin.WebUI.Areas.AdminArea.Models.WebMenuViewModel
@{
    Layout = "~/Views/_Layout.cshtml";
}
<!-- SAMPLE BOX CONFIGURATION MODAL FORM-->
<div class="bootbox modal fade in" id="box-config" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content modal-form">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">添加菜单</h4>
            </div>
            <div class="modal-body">
                <div class="bootbox-body">
                    @using (Html.BeginForm("AddMenu", "FrontSetting", new { area = "AdminArea" }, FormMethod.Post, new { @role = "form", @class = "form-horizontal", @id = "form1" }))
                    {
                        <div class="form-group">
                            <label class="col-sm-3 control-label">菜单名称：</label>
                            <div class="col-sm-7">
                                @Html.TextBoxFor(m => m.addmenu.MenuName, new { @class = "form-control", @placeholder = "菜单名称" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">菜单描述：</label>
                            <div class="col-sm-7">
                                @Html.TextBoxFor(m => m.addmenu.MenuAlt, new { @class = "form-control", @placeholder = "菜单描述" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">上级菜单：</label>
                            <div class="col-sm-7">
                                @{
                                    <select class="form-control" id="fathermenu">
                                        <option value="0">--顶级菜单--</option>
                                        @foreach (var item in Model.fatherlist)
                                        {
                                            <option value="@item.ID">@item.MenuName</option>
                                        }
                                    </select>
                                }
                                @Html.HiddenFor(m => m.addmenu.FatherID)
                                @Html.HiddenFor(m => m.addmenu.FatherName)
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">菜单状态：</label>
                            <div class="col-sm-7">
                                <label class="radio-inline">
                                    <input type="radio" class="uniform" name="optionsRadios1" value="1" checked>
                                    启用
                                </label>
                                <label class="radio-inline">
                                    <input type="radio" class="uniform" name="optionsRadios1" value="0">
                                    禁用
                                </label>
                                @Html.HiddenFor(m => m.addmenu.MenuStatus)
                            </div>
                        </div>                        
                        <div class="form-group">
                            <label class="col-sm-3 control-label">链接地址：</label>
                            <div class="col-sm-7">
                                @Html.TextBoxFor(m => m.addmenu.LinkUrl, new { @class = "form-control", @placeholder = "目标地址" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">区域名称：</label>
                            <div class="col-sm-7">
                                @Html.TextBoxFor(m => m.addmenu.AreaName, new { @class = "form-control", @placeholder = "区域名称" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">控制器名称：</label>
                            <div class="col-sm-7">
                                @Html.TextBoxFor(m => m.addmenu.ControllerName, new { @class = "form-control", @placeholder = "控制器名称" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Action名称：</label>
                            <div class="col-sm-7">
                                @Html.TextBoxFor(m => m.addmenu.ActionName, new { @class = "form-control", @placeholder = "Action名称" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">菜单图标：</label>
                            <div class="col-sm-7">
                                @Html.TextBoxFor(m => m.addmenu.MenuIcon, new { @class = "form-control", @placeholder = "图标名称" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">排序编号：</label>
                            <div class="col-sm-7">
                                @Html.TextBoxFor(m => m.addmenu.SortIndex, new { @class = "form-control", @placeholder = "排序编号" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">引用图片：</label>
                            <div class="col-sm-7">
                                @Html.TextBoxFor(m => m.addmenu.QuoteImage, new { @class = "form-control", @placeholder = "引用图片" })
                            </div>
                        </div>
                         <div class="form-group">
                            <label class="col-sm-3 control-label">引用文字：</label>
                            <div class="col-sm-7">
                                @Html.TextBoxFor(m => m.addmenu.QuoteText, new { @class = "form-control", @placeholder = "引用文字" })
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="javascript: document.getElementById('form1').submit(); return false;">Save changes</button>
            </div>
        </div>
    </div>
</div>
<!-- /SAMPLE BOX CONFIGURATION MODAL FORM-->
