@model SuperAdmin.WebUI.Areas.AdminArea.Models.WebSettingViewModel
@{
    Layout = "~/Views/_Layout.cshtml";
}
<div class="container">
    <div class="row">
        <div id="content" class="col-lg-12">
            <!-- PAGE HEADER-->
            <div class="row">
                <div class="col-sm-12">
                    <div class="page-header">
                        <!-- BREADCRUMBS -->
                        <ul class="breadcrumb">
                            <li>
                                <i class="fa fa-home"></i>
                                <a href="index.html">Home</a>
                            </li>
                            <li>
                                <a href="#">网站基础信息管理</a>
                            </li>
                            <li>编辑基础信息</li>
                        </ul>
                        <!-- /BREADCRUMBS -->
                        <div class="clearfix">
                            <h3 class="content-title pull-left">编辑基础信息</h3>
                        </div>
                        <div class="description"></div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    @using (Html.BeginForm("BaseData", "FrontSetting", new { area = "AdminArea" }, FormMethod.Post, new { @id = "form1", @class = "form-horizontal", @role = "form" }))
                    {
                        <div class="form-group">
                            <label class="col-sm-3 control-label">网站名称</label>
                            <div class="col-sm-7">
                                @Html.TextBoxFor(m => m.settings.WebName, new { @class = "form-control", @placeholder = "网站名称" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">网站描述</label>
                            <div class="col-sm-7">
                                @Html.TextAreaFor(m => m.settings.WebDescription, new { @rows = "3", @class = "form-control", @placeholder = "网站描述" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-3 control-label">网站类型</label>
                            <div class="col-sm-7">
                                @Html.TextBoxFor(m => m.settings.WebType, new { @class = "form-control", @placeholder = "网站类型" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">LOGO描述</label>
                            <div class="col-sm-7">
                                @Html.TextBoxFor(m => m.settings.WebLogoAlt, new { @class = "form-control", @placeholder = "LOGO描述" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">LOGO</label>
                            <div class="col-sm-7">
                                <div class="row">
                                    <div class="col-lg-4">
                                        <img id="adpic" height="120" width="150" src="@(string.IsNullOrWhiteSpace(Model.settings.WebLogo)?"/img/fileupload-default.jpg":(SuperAdmin.WebUI.Controllers.AppContext.Imgdomain+Model.settings.WebLogo))" class="pull-left">
                                    </div>
                                    <div class="col-lg-6">
                                        <span class="btn btn-lg btn-warning fileinput-button pull-buttom">
                                            <i class="icon-plus icon-white"></i>
                                            <span>&nbsp;上传图片&nbsp;</span>
                                            <input id="fileupload" type="file" name="files[]" data-url="@Url.Action("UploadFiles", "Home", new { area = "" })">
                                            @Html.HiddenFor(m => m.settings.WebLogo)
                                        </span>
                                        <p id="erradpic" class="text-danger">asdasdas</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-3 control-label">备案编号</label>
                            <div class="col-sm-7">
                                @Html.TextBoxFor(m => m.settings.WebPutonrecord, new { @class = "form-control", @placeholder = "备案编号" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-3 control-label">关键词</label>
                            <div class="col-sm-7">
                                @Html.TextBoxFor(m => m.settings.WebDefaultKey, new { @class = "form-control", @placeholder = "关键词" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-3 control-label">联系地址</label>
                            <div class="col-sm-7">
                                @Html.TextBoxFor(m => m.settings.WebAddress, new { @class = "form-control", @placeholder = "联系地址" })
                            </div>
                        </div>       
                        <div class="form-group">
                            <label class="col-sm-3 control-label">传真</label>
                            <div class="col-sm-7">
                                @Html.TextBoxFor(m => m.settings.WebFax, new { @class = "form-control", @placeholder = "传真" })
                            </div>
                        </div>       
                        <div class="form-group">
                            <label class="col-sm-3 control-label">手机</label>
                            <div class="col-sm-7">
                                @Html.TextBoxFor(m => m.settings.WebMobile, new { @class = "form-control", @placeholder = "手机" })
                            </div>
                        </div>       
                        <div class="form-group">
                            <label class="col-sm-3 control-label">电话</label>
                            <div class="col-sm-7">
                                @Html.TextBoxFor(m => m.settings.WebPhone, new { @class = "form-control", @placeholder = "电话" })
                            </div>
                        </div>       
                        <div class="form-group">
                            <label class="col-sm-3 control-label">邮箱</label>
                            <div class="col-sm-7">
                                @Html.TextBoxFor(m => m.settings.WebEmail, new { @class = "form-control", @placeholder = "邮箱" })
                            </div>
                        </div>       
                        <div class="form-group">
                            <label class="col-sm-3 control-label">关于我们</label>
                            <div class="col-sm-7">
                                <script type="text/plain" id="articleeditor">@Model.settings.WebAboutUs.RexReplace()</script>
                                @Html.HiddenFor(m=>m.settings.WebAboutUs)
                            </div>
                        </div>                          
                        <div class="modal-footer center">
                            <a class="btn btn-lg btn-default" href="#">取 消</a>
                            <button type="button" class="btn btn-lg btn-primary" onclick="checkform()">保  存</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
@section mycss{
    <link rel="stylesheet" href="@Url.Content("/js/jquery-upload/css/jquery.fileupload.css")">
    <link rel="stylesheet" href="@Url.Content("/js/jquery-upload/css/jquery.fileupload-ui.css")">
}
@section scriptfiles{
    <script src="@Url.Content("/js/jquery-upload/js/vendor/jquery.ui.widget.js")"></script>
    <script src="@Url.Content("/js/jquery-upload/js/jquery.iframe-transport.js")"></script>
    <script src="@Url.Content("/js/jquery-upload/js/jquery.fileupload.js")"></script>
    <script type="text/javascript" src="@Url.Content("/ueditor/ueditor.config.js")"></script>
    <script type="text/javascript" src="@Url.Content("/ueditor/ueditor.all.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("/ueditor/lang/zh-cn/zh-cn.js")"></script>
}
@section myscript{
    <script type="text/javascript">
        $(function () {
            App.init(); //Initialise plugins and elements
            $("#erradpic").hide();
            $("#fileupload").fileupload({
                dataType: 'json',
                type: "POST",
                singleFileUploads: true,
                autoUpload: true,
                done: function (e, data) {
                    var path = data.result.path;
                    var urlpath = data.result.urlpath;
                    var ustatus = data.result.status;
                    var msg = data.result.meg;
                    if (ustatus) {
                        $("#erradpic").hide();
                        $("#adpic").attr("src", urlpath);
                        $("#settings_WebLogo").val(path);
                    }
                    else {
                        $("#erradpic").show();
                        $("#erradpic").html(msg);
                    }
                }
            });
            var ue = UE.getEditor('articleeditor', UE.utils.extend({
                toolbars: [['source', '|', 'bold', 'italic', 'underline', 'fontborder', 'strikethrough', 'superscript', 'subscript', '|', 'fontsize', '|', 'directionalityltr', 'directionalityrtl', 'indent', '|', 'justifyleft', 'justifycenter', 'justifyright', 'justifyjustify', '|', 'simpleupload']]
        , zIndex: 0, initialFrameHeight: 440
            }, null, true));
            
        });
        function checkform()
        {
            var content = UE.getEditor('articleeditor').getContent();
            $("#settings_WebAboutUs").val(content);
            document.getElementById('form1').submit();
            return false;
        }
    </script>
}
