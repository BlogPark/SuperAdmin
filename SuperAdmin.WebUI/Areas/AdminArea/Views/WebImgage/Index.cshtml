@section myscript{
    <script type="text/javascript">
        $(function () {
            App.init(); //Initialise plugins and elements
            $('.filter-content').hover(function () {
                var hoverContent = $(this).children('.hover-content');
                hoverContent.removeClass('fadeOut').addClass('animated fadeIn').show();
            }, function () {
                var hoverContent = $(this).children('.hover-content');
                hoverContent.removeClass('fadeIn').addClass('fadeOut');
            });
            $('.colorbox-button').colorbox({ rel: 'colorbox-button', maxWidth: '95%', maxHeight: '95%' });
            $("#erradpic").hide();
            $("#fileupload").fileupload({
                dataType: 'json',
                type: "POST",
                singleFileUploads: true,
                autoUpload: true,
                done: function (e, data) {
                    var path = data.result.path;
                    var urlpath = data.result.urlpath;
                    var ustatus = data.result.status;
                    var msg = data.result.meg;
                    if (ustatus) {
                        $("#erradpic").hide();
                        $("#adpic").attr("src", urlpath);
                        $("#addmodel_PicUrl").val(path);
                        $("#addmodel_PicHeight").val(data.result.imgheight);
                        $("#addmodel_PicWidth").val(data.result.imgwidth)
                    }
                    else {
                        $("#erradpic").show();
                        $("#erradpic").html(msg);
                    }
                }
            });
            $("#addmodel_PicCateID").val($("#catelist").val());
            $("#addmodel_PicCateName").val($("#catelist").find("option:selected").text());
            $("#catelist").change(function () {
                var changetext = $("#catelist").find("option:selected").text();
                var changeval = $("#catelist").val();
                $("#addmodel_PicCateID").val(changeval);
                $("#addmodel_PicCateName").val(changetext);
            });
            $("#addmodel_PicStatus").val($("input:radio[name=optionsRadios1]:checked").val());
            $("input:radio[name=optionsRadios1]").change(function () {
                var raval = $("input:radio[name=optionsRadios1]:checked").val();
                $("#addmodel_PicStatus").val(raval);
            });
            $("input:radio[name=optionsRadios2]").change(function () {
                var raval = $("input:radio[name=optionsRadios2]:checked").val();
                $("#updmodel_PicStatus").val(raval);
            });
        });
        function updwebimage(id) {
            var dtr = $("#tr" + id).children('td');
            if (dtr) {
                var title = dtr.eq(0).html();
                var cateid = dtr.eq(1).attr("name");
                var catename = dtr.eq(1).html();
                var tag = dtr.eq(2).html();
                var statusid = dtr.eq(6).attr("name");
                $("#updmodel_ID").val(id);
                $("#updmodel_PicName").val(title);
                $("#updmodel_PicCateID").val(cateid);
                $("#updmodel_PicCateName").val(catename);
                $("#updmodel_PicTags").val(tag);
                $("#updmodel_PicStatus").val(statusid);
                $("input:radio[name=optionsRadios2][value=" + statusid + "]").prop("checked", true);
                $("#updcatelist option[value=" + cateid + "]").attr("selected", true);
            }
        }
        function deltewebimage(id) {
            $.ajax({
                url: '@Url.Action("delete", "WebImgage", new { area = "AdminArea" })',
                dataType: 'Json',
                data: { 'id': id },
                type: 'POST',
                success: function (data) {
                    var str = ''; var img = '';
                    if (data == '1') {
                        $("#tr" + id + " td:nth-child(7)").attr("name", "0");
                        $("#tr" + id + " td:nth-child(7)").html("已删除");
                        str = "操作成功！";
                        img = '/img/gritter/success.jpg';
                    }
                    else {
                        str = "操作失败！";
                        img = '/img/gritter/error.png';
                    }
                    setTimeout(function () {
                        var unique_id = $.gritter.add({
                            // (string | mandatory) the heading of the notification
                            title: str,
                            // (string | mandatory) the text inside the notification
                            text: '',
                            // (string | optional) the image to display on the left
                            image: img,
                            // (bool | optional) if you want it to fade out on its own or just sit there
                            sticky: true,
                            // (int | optional) the time you want it to be alive for before fading out
                            time: '',
                            // (string | optional) the class name you want to apply to that specific message
                            class_name: 'my-sticky-class'
                        });
                        // You can have it return a unique id, this can be used to manually remove it later using
                        setTimeout(function () {
                            $.gritter.remove(unique_id, {
                                fade: true,
                                speed: 'slow'
                            });
                        }, 3000);
                    }, 0);
                }
            });
        }
    </script>
}
