@model SuperAdmin.WebUI.Areas.AdminArea.Models.WebImgageIndexViewModel
@{
    Layout = "~/Views/_Layout.cshtml";
}
<!-- SAMPLE BOX CONFIGURATION MODAL FORM-->
<div class="bootbox modal fade in" id="box-config" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content modal-form">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">添加新图片</h4>
            </div>
            <div class="modal-body">
                <div class="bootbox-body">
                    @using (Html.BeginForm("AddPic", "WebImgage", new { area = "AdminArea" }, FormMethod.Post, new { @role = "form", @class = "form-horizontal", @id = "form2" }))
                    {                       
                        <div class="form-group">
                            <label class="col-sm-3 control-label">图片标题：</label>
                            <div class="col-sm-6">
                                @Html.TextBoxFor(m => m.addmodel.PicName, new { @class = "form-control", @placeholder = "图片标题" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">图片类别</label>
                            <div class="col-sm-4">
                                <select class="form-control" id="catelist">
                                    @foreach (var item in Model.categories)
                                    {

                                        <option value="@item.ID">@item.PiccName</option>
                                    }
                                </select>
                                @Html.HiddenFor(m => m.addmodel.PicCateID)
                                @Html.HiddenFor(m => m.addmodel.PicCateName)
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">图片关键词：</label>
                            <div class="col-sm-6">
                                @Html.TextBoxFor(m => m.addmodel.PicTags, new { @class = "form-control", @placeholder = "图片关键词" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">文章主图</label>
                            <div class="col-sm-9">
                                <div class="col-sm-5">
                                    <img id="adpic" height="120" width="120" src="/img/fileupload-default.jpg" class="pull-left">
                                </div>
                                <div class="col-sm-6">
                                    <span class="btn btn-lg btn-warning fileinput-button pull-buttom">
                                        <i class="icon-plus icon-white"></i>
                                        <span>&nbsp;上传图片&nbsp;</span>
                                        <input id="fileupload" type="file" name="files[]" data-url="@Url.Action("UploadFiles", "Home", new { area = "" })">
                                    </span>
                                    <p id="erradpic" class="text-danger"></p>
                                </div>
                                @Html.HiddenFor(m => m.addmodel.PicUrl)
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">图片宽度：</label>
                            <div class="col-sm-3">
                                @Html.TextBoxFor(m => m.addmodel.PicWidth, new { @class = "form-control", @placeholder = "图片宽度", @readonly = "true" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">图片高度：</label>
                            <div class="col-sm-3">
                                @Html.TextBoxFor(m => m.addmodel.PicHeight, new { @class = "form-control", @placeholder = "图片高度", @readonly = "true" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">图片状态：</label>
                            <div class="col-sm-7">
                                <label class="radio-inline">
                                    <input type="radio" class="uniform" name="optionsRadios1" value="1" checked>
                                    启用
                                </label>
                                <label class="radio-inline">
                                    <input type="radio" class="uniform" name="optionsRadios1" value="0">
                                    禁用
                                </label>
                                @Html.HiddenFor(m => m.addmodel.PicStatus)
                            </div>
                        </div>  
                    }
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">取 消</button>
                <button type="button" class="btn btn-primary" onclick="javascript:document.getElementById('form2').submit(); return false;">添  加</button>
            </div>
        </div>
    </div>
</div>
<!-- /SAMPLE BOX CONFIGURATION MODAL FORM-->
