            <div class="row">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="row" id="tabdiv">
                            <table class="table table-striped table-bordered" id="menutab">
                                <thead>
                                    <tr>
                                        <th>图片标题</th>
                                        <th>图片分类</th>
                                        <th>图片标签</th>
                                        <th>图片宽度</th>
                                        <th>图片高度</th>
                                        <th>图片地址</th>
                                        <th>图片状态</th>
                                        <th>预  览</th>
                                        <th>编  辑</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.list)
                                    {
                                        <tr id="tr@(item.ID)">
                                            <td>@item.PicName</td>
                                            <td name="@item.PicCateID">@item.PicCateName</td>
                                            <td>@item.PicTags</td>
                                            <td>@item.PicWidth</td>
