@model SuperAdmin.WebUI.Areas.AdminArea.Models.ArticleIndexViewModel
@{
    Layout = "~/Views/_Layout.cshtml";
}
<div class="container">
    <div class="row">
        <div id="content" class="col-lg-12">
            <!-- PAGE HEADER-->
            <div class="row">
                <div class="col-sm-12">
                    <div class="page-header">
                        <!-- BREADCRUMBS -->
                        <ul class="breadcrumb">
                            <li>
                                <i class="fa fa-home"></i>
                                <a href="index.html">Home</a>
                            </li>
                            <li>
                                <a href="#">文章管理</a>
                            </li>
                            <li>文章列表</li>
                        </ul>
                        <!-- /BREADCRUMBS -->
                        <div class="clearfix">
                            <h3 class="content-title pull-left">文章列表</h3>
                        </div>
                        <div class="description"></div>
                    </div>
                </div>
            </div>
            <!-- /PAGE HEADER -->
            <div class="row">
                <div class="col-sm-11">
                    <div class="btn-group hidden-xs pull-right invoice-btn-group">
                        <p class="btn-toolbar">
                            <a class="btn btn-primary" data-toggle="modal" href="#" id="addnew" ><i class="fa fa-search"></i>&nbsp;查询条件预留</a>
                        </p>
                    </div>
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="row" id="tabdiv">
                        <table class="table table-striped table-bordered" id="menutab">
                            <thead>
                                <tr>
                                    <th class="text-center">编        号</th>
                                    <th class="text-center">文章标题</th>
                                    <th class="text-center">文章作者</th>
                                    <th class="text-center">文章类型</th>
                                    <th class="text-center">文章分类</th>
                                    <th class="text-center">发布时间</th>
                                    <th class="text-center">添加时间</th>
                                    <th class="text-center">文章状态</th>
                                    <th class="text-center">编        辑</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.articlelist)
                                {
                                    <tr id="tr@(item.ID)" class="text-center">
                                        <td>@item.ID</td>
                                        <td>@item.ArtTitle</td>
                                        <td name="@(item.MemberID)">@item.MemberName</td>
                                        <td name="@(item.ArtType)">@item.ArtTypeName</td>
                                        <td name="@(item.ArtCID)">@item.ArtCName</td>
                                        <td>@item.ArtPublishTime</td>
                                        <td>@item.AddTime</td>
                                        <td name="@(item.ArtStatus)">
                                            @item.ArtStatusName
                                        </td>
                                        <td>
                                            <p class="btn-toolbar">
                                                <button class="btn btn-success" data-toggle="modal"><i class="fa fa-pencil-square-o"></i>&nbsp;预  览</button>
                                                <button class="btn btn-warning" data-toggle="modal" onclick="checkart(@item.ID)" ><i class="fa fa-pencil-square-o"></i>&nbsp;审核</button>
                                                <button class="btn btn-danger" data-toggle="modal" onclick="delart(@item.ID)" ><i class="fa fa-times-circle"></i>&nbsp; 删 除</button>
                                            </p>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section mycss{
    <link rel="stylesheet" href="@Url.Content("/js/gritter/css/jquery.gritter.css")">
}
@section scriptfiles{
    <script src="@Url.Content("/js/gritter/js/jquery.gritter.min.js")"></script>
}
@section myscript{
    <script type="text/javascript">
        $(function () {
            App.init(); //Initialise plugins and elements
        });
        function checkart(sid) {
            $.ajax({
                url: '@Url.Action("", "", new { area = "" })',
                dataType: 'Json',
                data: { 'sid': sid },
                type: 'POST',
                success: function (data) {
                    var str = ''; var img = '';
                    if (data == '1') {
                        var id = $("#tr" + sid + " td:nth-child(8)").attr("name");
                        if (id == '0') {
                            $("#tr" + sid + " td:nth-child(8)").attr("name", "1");
                            $("#tr" + sid + " td:nth-child(8)").html("启用");
                        }
                        else {
                            $("#tr" + sid + " td:nth-child(8)").attr("name", "0");
                            $("#tr" + sid + " td:nth-child(8)").html("已作废");
                        }
                        str = "操作成功！";
                        img = '/img/gritter/success.jpg';
                    }
                    else {
                        str = "操作失败！";
                        img = '/img/gritter/error.png';
                    }
                    setTimeout(function () {
                        var unique_id = $.gritter.add({
                            // (string | mandatory) the heading of the notification
                            title: str,
                            // (string | mandatory) the text inside the notification
                            text: '',
                            // (string | optional) the image to display on the left
                            image: img,
                            // (bool | optional) if you want it to fade out on its own or just sit there
                            sticky: true,
                            // (int | optional) the time you want it to be alive for before fading out
                            time: '',
                            // (string | optional) the class name you want to apply to that specific message
                            class_name: 'my-sticky-class'
                        });
                        // You can have it return a unique id, this can be used to manually remove it later using
                        setTimeout(function () {
                            $.gritter.remove(unique_id, {
                                fade: true,
                                speed: 'slow'
                            });
                        }, 3000);
                    }, 0);
                }
            });
        }
        function delart(sid) {
            $.ajax({
                url: '@Url.Action("", "", new { area = "" })',
                dataType: 'Json',
                data: { 'sid': sid },
                type: 'POST',
                success: function (data) {
                    var str = ''; var img = '';
                    if (data == '1') {
                        var id = $("#tr" + sid + " td:nth-child(8)").attr("name");
                        if (id == '0') {
                            $("#tr" + sid + " td:nth-child(8)").attr("name", "1");
                            $("#tr" + sid + " td:nth-child(8)").html("启用");
                        }
                        else {
                            $("#tr" + sid + " td:nth-child(8)").attr("name", "0");
                            $("#tr" + sid + " td:nth-child(8)").html("已作废");
                        }
                        str = "操作成功！";
                        img = '/img/gritter/success.jpg';
                    }
                    else {
                        str = "操作失败！";
                        img = '/img/gritter/error.png';
                    }
                    setTimeout(function () {
                        var unique_id = $.gritter.add({
                            // (string | mandatory) the heading of the notification
                            title: str,
                            // (string | mandatory) the text inside the notification
                            text: '',
                            // (string | optional) the image to display on the left
                            image: img,
                            // (bool | optional) if you want it to fade out on its own or just sit there
                            sticky: true,
                            // (int | optional) the time you want it to be alive for before fading out
                            time: '',
                            // (string | optional) the class name you want to apply to that specific message
                            class_name: 'my-sticky-class'
                        });
                        // You can have it return a unique id, this can be used to manually remove it later using
                        setTimeout(function () {
                            $.gritter.remove(unique_id, {
                                fade: true,
                                speed: 'slow'
                            });
                        }, 3000);
                    }, 0);
                }
            });
        }
    </script>
}
