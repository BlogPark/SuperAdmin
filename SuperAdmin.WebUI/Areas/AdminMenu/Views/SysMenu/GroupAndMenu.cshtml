@model SuperAdmin.WebUI.Areas.AdminMenu.Models.SysUserMenuViewModel
@{
    Layout = "~/Views/_Layout.cshtml";
}
<!-- SAMPLE BOX CONFIGURATION MODAL FORM-->
<div class="bootbox modal fade in" id="box-config" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content modal-form">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">编辑用户组权限</h4>
            </div>
            <div class="modal-body">
                <div class="bootbox-body">
                    @using (Html.BeginForm("Auadmingroup", "SysMenu", FormMethod.Post, new { @role = "form", @class = "form-horizontal", @id = "form1" }))
                    {
                        @Html.HiddenFor(m => m.SinglePermissions.ID)
                        <div class="form-group">
                            <label class="col-sm-3 control-label">用户组名称：</label>
                            <div class="col-sm-7">
                                @Html.TextBoxFor(m => m.SinglePermissions.MName, new { @class = "form-control", @placeholder = "用户组名称" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">用户组描述：</label>
                            <div class="col-sm-7">
                                @Html.TextBoxFor(m => m.SinglePermissions.MenuTypeName, new { @class = "form-control", @placeholder = "用户组描述" })
                            </div>
                        </div>
                       
                        <div class="form-group">
                            <label class="col-sm-3 control-label">用户组状态：</label>
                            <div class="col-sm-7">
                                <label class="radio-inline"> <input type="radio" class="uniform" name="optionsRadios1" value="1" checked> 启用 </label>
                                <label class="radio-inline"> <input type="radio" class="uniform" name="optionsRadios1" value="0"> 禁用 </label>
                                @Html.HiddenFor(m => m.SinglePermissions.FatherID)
                            </div>
                        </div>        
                    }
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">取 消</button>
                <button type="button" class="btn btn-primary" onclick="javascript: document.getElementById('form1').submit(); return false;">保  存</button>
            </div>
        </div>
    </div>
</div>
<!-- /SAMPLE BOX CONFIGURATION MODAL FORM-->
<div class="container">
    <div class="row">
        <div id="content" class="col-lg-12">
            <!-- PAGE HEADER-->
            <div class="row">
                <div class="col-sm-12">
                    <div class="page-header">
                        <!-- BREADCRUMBS -->
                        <ul class="breadcrumb">
                            <li>
                                <i class="fa fa-home"></i>
                                <a href="index.html">Home</a>
                            </li>
                            <li>
                                <a href="#">系统设置</a>
                            </li>
                            <li>系统权限管理</li>
                        </ul>
                        <!-- /BREADCRUMBS -->
                        <div class="clearfix">
                            <h3 class="content-title pull-left">系统用户组权限管理</h3>
                        </div>
                        <div class="description"></div>
                    </div>
                </div>
            </div>
            <!-- /PAGE HEADER -->
            <div class="row">
                <div class="col-sm-11">
                    <div class="btn-group hidden-xs pull-left invoice-btn-group">
                        <p class="btn-toolbar">
                            <select class="form-control" id="usergroup">
                                @foreach (SuperAdmin.datamodel.SysAdminUserGroupModel item in Model.AdminUser)
                                {
                                    <option value="@item.ID">@item.GroupName</option>
                                }
                            </select>
                        </p>
                    </div>
                    <div class="btn-group hidden-xs pull-right invoice-btn-group">
                        <p class="btn-toolbar">
                            <a class="btn btn-primary" data-toggle="modal" href="#box-config" id="addnew"><i class="fa fa-plus"></i>增加权限</a>
                        </p>
                    </div>
                </div>
            </div>

            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="row" id="tabdiv">
                        <table class="table table-striped table-bordered" id="menutab">
                            <thead>
                                <tr id="tablehead">
                                    <th>菜单编号</th>
                                    <th>菜单名称</th>
                                    <th>菜单类型</th>
                                    <th>当前权限</th>
                                    <th>允许编辑</th>
                                    <th>编  辑</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (SuperAdmin.datamodel.SysAdminGrouprMenuModel item in Model.Menus)
                                {
                                    <tr id="tr@(item.ID)" name="tr@(item.GID)" class="@(item.FatherID == 0 ? "alert-danger" : "")">
                                        <td>@item.ID</td>
                                        <td>@item.MName</td>
                                        <td>@item.MenuTypeName</td>
                                        <td>@item.PermissionTypeName</td>
                                        <td>@item.IsEditName</td>
                                        <td>
                                            @if (item.IsEdit == 1)
                                            {
                                                <p class="btn-toolbar">
                                                    <a class="btn btn-warning" data-toggle="modal" href="#box-config" onclick="updatemassage(@item.ID)">修改</a>
                                                    @*<button class="btn btn-danger">删除</button>*@
                                                </p>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section myscript{
    <script type="text/javascript">
        $(function () {
            $("tr[id^='tr']").hide();
            var gid = $("#usergroup").val();
            $("tr[name=tr" + gid + "]").show();
            $("#usergroup").change(function () {
                var gid = $("#usergroup").val();
                $("tr[name=tr" + gid + "]").show();
                $("tr[name!=tr" + gid + "]").hide();
                $("#tablehead").show();
            });
        });
        function updatemassage(id)
        {
        }
    </script>
}
