@using SuperAdmin.datamodel
@model SuperAdmin.WebUI.Areas.SysAdvertisement.Models.SystemAdInfoViewModel
@{
    Layout = "~/Views/_Layout.cshtml";
}
<div class="container">
    <div class="row">
        <div id="content" class="col-lg-12">
            <!-- PAGE HEADER-->
            <div class="row">
                <div class="col-sm-12">
                    <div class="page-header">
                        <!-- BREADCRUMBS -->
                        <ul class="breadcrumb">
                            <li>
                                <i class="fa fa-home"></i>
                                <a href="index.html">Home</a>
                            </li>
                            <li>
                                <a href="#">广告设置</a>
                            </li>
                            <li>广告管理</li>
                        </ul>
                        <!-- /BREADCRUMBS -->
                        <div class="clearfix">
                            <h3 class="content-title pull-left">广告信息</h3>
                        </div>
                        <div class="description"></div>
                    </div>
                </div>
            </div>
            <!-- /PAGE HEADER -->
            <div class="row">
                <div class="col-sm-11">
                    <div class="btn-group hidden-xs pull-right invoice-btn-group">
                        <p class="btn-toolbar">
                            <a class="btn btn-primary" data-toggle="modal" href="#box-config1" id="addnew"><i class="fa fa-plus"></i>&nbsp;添加广告</a>
                        </p>
                    </div>
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-body">          
                             
                    <div class="form-group">
                    <input id="file-4" type="file" class="file" multiple data-min-file-count="1" data-upload-url="#">
                </div>

                    <div class="row" id="tabdiv">
                        <table class="table table-striped table-bordered" id="menutab">
                            <thead>
                                <tr>
                                    <th class="text-center">广告编号</th>
                                    <th class="text-center">广告名称</th>
                                    <th class="text-center">广告宽度</th>
                                    <th class="text-center">广告高度</th>
                                    <th class="text-center">广告类型</th>
                                    <th class="text-center">广告状态</th>
                                    <th class="text-center">编  辑</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (SystemAdModel item in Model.Adlists)
                                {
                                    <tr id="tr@(item.ID)">
                                        <td>@item.ID</td>
                                        <td>@item.AdTitle</td>
                                        <td>@item.AdWidth</td>
                                        <td>@item.AdHeight</td>
                                        <td name="@item.AdType">
                                            <lable class="tip-bottom" data-original-title="@(item.AdType == 1 ? "图片广告" : "图文广告")">@item.AdType</lable>
                                        </td>
                                        <td name="@(item.AdStatus)">
                                            @item.AdStatusName
                                        </td>

                                        <td>
                                            <p class="btn-toolbar">
                                                <a class="btn btn-warning" data-toggle="modal" href="#box-config" onclick="updatemassage(@item.ID)"><i class="fa fa-pencil-square-o"></i>&nbsp;修改</a>
                                                <button class="btn btn-danger" onclick="deluser(@item.ID)"><i class="fa fa-times-circle"></i>&nbsp; 禁 用</button>
                                            </p>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section mycss{
    <!-- FILE UPLOAD -->
    <link rel="stylesheet" type="text/css" href="@Url.Content("/js/bootstrap-fileinput/fileinput.css")" />
}
@section scriptfiles{
    <!-- FILE UPLOAD -->
    <script type="text/javascript" src="@Url.Content("/js/bootstrap-fileinput/bootstrap.min.js")"></script>
     <!-- FILE UPLOAD -->
    <script type="text/javascript" src="@Url.Content("/js/bootstrap-fileinput/fileinput.js")"></script>
     <!-- FILE UPLOAD -->
    <script type="text/javascript" src="@Url.Content("/js/bootstrap-fileinput/fileinput_locale_zh.js")"></script>
}
@section myscript{
    <script type="text/javascript">
        $(function () {
            App.init(); //Initialise plugins and elements
            $("#file-4").fileinput({
                //uploadExtraData: {kvId: '10'},
                uploadUrl: '/IndexPub/AjaxUploadArticlePices', // you must set a valid URL here else you will get an error
                allowedFileExtensions: ['jpg', 'png', 'gif'],
                showUpload: true,
                showCaption: false,
                showRemove: false,
                showPreview: true,
                showAjaxErrorDetails: false
            });
            $("#file-4").on('fileselect', function (event, n, l) {
                //alert('File Selected. Name: ' + l + ', Num: ' + n);
            });
            $("#file-4").on("fileuploaded", function (event, data, previewId, index) {
                alert(data);
            });
        });
    </script>
}
