@model SuperAdmin.WebUI.Areas.SysAdvertisement.Models.SysAdPositionViewModel
@{
    ViewBag.Title = "系统广告位置维护";
    Layout = "~/Views/_Layout.cshtml";
}
<!-- SAMPLE BOX CONFIGURATION MODAL FORM-->
<div class="bootbox modal fade in" id="box-config1" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content modal-form">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">添加广告位置信息</h4>
            </div>
            <div class="modal-body">
                <div class="bootbox-body">
                    @using (Html.BeginForm("AddPosition", "SysAdManage", new { area = "SysAdvertisement" }, FormMethod.Post, new { @role = "form", @class = "form-horizontal", @id = "form1" }))
                    {
                        <div class="form-group">
                            <label class="col-sm-3 control-label">区域名称：</label>
                            <div class="col-sm-7">
                                @Html.TextBoxFor(m => m.addposition.PName, new { @class = "form-control", @placeholder = "区域名称" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">区域宽度：</label>
                            <div class="col-sm-4">
                                <div class="input-group">
                                @Html.TextBoxFor(m => m.addposition.PWidth, new { @class = "form-control", @placeholder = "区域宽度" })
                                <span class="input-group-addon">px</span>
                                    </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">区域高度：</label>
                            <div class="col-sm-4">
                                <div class="input-group">
                                @Html.TextBoxFor(m => m.addposition.PHeight, new { @class = "form-control", @placeholder = "区域高度" })
                                <span class="input-group-addon">px</span>
                                    </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">所属平台：</label>
                            <div class="col-sm-7">
                                <p class="btn-toolbar">
                                    <select class="form-control" id="addsite">
                                        @foreach (var item in Model.syssite)
                                        {
                                            <option value="@item.ID">@item.AdSiteName</option>
                                        }
                                    </select>
                                </p>
                                @Html.HiddenFor(m => m.addposition.AdSiteID)
                                @Html.HiddenFor(m => m.addposition.AdSiteName)
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">位置类型：</label>
                            <div class="col-sm-7">
                                <label class="radio-inline">
                                    <input type="radio" class="uniform" name="optionsRadios1" value="1" checked>
                                    首页
                                </label>
                                <label class="radio-inline">
                                    <input type="radio" class="uniform" name="optionsRadios1" value="2">
                                    详情页
                                </label>
                                <label class="radio-inline">
                                    <input type="radio" class="uniform" name="optionsRadios1" value="3">
                                    固定位置
                                </label>
                                @Html.HiddenFor(m => m.addposition.PType)
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">取 消</button>
                <button type="button" class="btn btn-primary" onclick="javascript: document.getElementById('form1').submit(); return false;">保  存</button>
            </div>
        </div>
    </div>
</div>
<!-- /SAMPLE BOX CONFIGURATION MODAL FORM-->
