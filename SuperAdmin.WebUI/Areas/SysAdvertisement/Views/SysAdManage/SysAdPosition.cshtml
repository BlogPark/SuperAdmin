<div class="container">
    <div class="row">
        <div id="content" class="col-lg-12">
            <!-- PAGE HEADER-->
            <div class="row">
                <div class="col-sm-12">
                    <div class="page-header">
                        <!-- BREADCRUMBS -->
                        <ul class="breadcrumb">
                            <li>
                                <i class="fa fa-home"></i>
                                <a href="index.html">Home</a>
                            </li>
                            <li>
                                <a href="#">广告设置</a>
                            </li>
                            <li>系统广告位置管理</li>
                        </ul>
                        <!-- /BREADCRUMBS -->
                        <div class="clearfix">
                            <h3 class="content-title pull-left">系统广告位置管理</h3>
                        </div>
                        <div class="description"></div>
                    </div>
                </div>
            </div>
            <!-- /PAGE HEADER -->
            <div class="row">
                <div class="col-sm-11">
                    <div class="btn-group hidden-xs pull-right invoice-btn-group">
                        <p class="btn-toolbar">
                            <a class="btn btn-primary" data-toggle="modal" href="#box-config1" id="addnew"><i class="fa fa-plus"></i>&nbsp;添加新广告位</a>
                        </p>
                    </div>
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="row" id="tabdiv">
                        <table class="table table-striped table-bordered" id="menutab">
                            <thead>
                                <tr>
                                    <th class="text-center">区域编号</th>
                                    <th class="text-center">区域名称</th>
                                    <th class="text-center">区域宽度</th>
                                    <th class="text-center">区域高度</th>
                                    <th class="text-center">区域类型</th>
                                    <th class="text-center">所属平台</th>
                                    <th class="text-center">状        态</th>
                                    <th class="text-center">编  辑</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.positions)
                                {
                                    <tr id="tr@(item.ID)" class="text-center">
                                        <td>@item.ID</td>
                                        <td>@item.PName</td>
                                        <td>@item.PWidth</td>
                                        <td>@item.PHeight</td>
                                        <td name="@(item.PType)">
                                            @{
                                    if (item.PType == 1)
                                    { @Html.Raw("首页")}
                                    else if (item.PType == 2)
                                    { @Html.Raw("详情页")}
                                    else if (item.PType == 3)
                                    { @Html.Raw("固定位置")}
                                            }
                                        </td>
                                        <td name="@(item.AdSiteID)">
                                            @item.AdSiteName
                                        </td>
                                         <td name="@(item.PStatus)">
                                          @{   if (item.PType == 0)
                                               { @Html.Raw("禁用")}
                                               else { @Html.Raw("启用")}
                                                     }
                                        </td>
                                        <td>
                                            <p class="btn-toolbar">
                                                <a class="btn btn-warning" data-toggle="modal" href="#box-config" onclick="updatemassage(@item.ID)"><i class="fa fa-pencil-square-o"></i>&nbsp;修改</a>
                                                <button class="btn btn-danger" onclick="deluser(@item.ID)"><i class="fa fa-times-circle"></i>&nbsp; 禁 用</button>
                                            </p>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scriptfiles{
    <!-- BOOTBOX -->
    <script type="text/javascript" src="@Url.Content("/js/bootbox/bootbox.min.js")"></script>
}
@section myscript{
    <script type="text/javascript">
        $(function () {
            App.init(); //Initialise plugins and elements
            $("#addsite").change(function () {
                var id = $(this).val();
                var text = $("#addsite").find("option:checked").text();
                $("#addposition_AdSiteID").val(id);
                $("#addposition_AdSiteName").val(text);
            });
            $("#updsite").change(function () {
                var id = $(this).val();
                var text = $("#updsite").find("option:checked").text();
                $("#updateposition_AdSiteID").val(id);
                $("#addposition_AdSiteName").val(text);
            });
            $("input:radio[name=optionsRadios1]").change(function () {
                var id = $(this).val();
                $("#addposition_PType").val(id);
            });
            $("input:radio[name=optionsRadios2]").change(function () {
                var id = $(this).val();
                $("#updateposition_PType").val(id);
            });
        });
        function updatemassage(id) {
            var dtr = $("#tr" + id).children('td');
            if (dtr) {
                var id = dtr.eq(0).html();
                var pname = dtr.eq(1).html();
                var pwidth = dtr.eq(2).html();
                var pheight = dtr.eq(3).html();
                var adsiteid = dtr.eq(5).attr("name");
                var adsitename=dtr.eq(5).html();
                var ptype = dtr.eq(4).attr("name");

                $("#updateposition_ID").val(id);
                $("#updateposition_PName").val(pname);
                $("#updateposition_PWidth").val(pwidth);
                $("#updateposition_PHeight").val(pheight);
                $("#updateposition_AdSiteID").val(adsiteid);
                $("#updateposition_AdSiteName").val(adsitename);
                $("#updateposition_PType").val(ptype);
                $("input:radio[name=optionsRadios2][value=" + ptype + "]").prop("checked", true);
                $("#updusergroup option[value=" + adsiteid + "]").attr("selected", true);;
            }
        }
        function deluser(id) {
            bootbox.confirm("确定要禁用此区域?", function (result) {
                if (result) {
                    $.ajax({
                        url: '@Url.Action("DeletePosition", "SysAdManage", new { area = "SysAdvertisement" })',
                        datatype: 'json',
                        async: false,
                        type: 'POST',
                        data: { 'pid': id },
                        success: function (data) {
                            if (data == "1") {
                                var dtr = $("#tr" + id).children('td');
                                if (dtr) {
                                    dtr.eq(6).attr("name", "0");
                                    dtr.eq(6).html("禁用");
                                }
                                bootbox.alert("操作成功");
                                setTimeout(function () {
                                    $(".bootbox").modal("hide");
                                }, 2000);
                            }
                            else { bootbox.alert("操作失败"); }
                        }
                    });
                }
            });
        }
    </script>
}