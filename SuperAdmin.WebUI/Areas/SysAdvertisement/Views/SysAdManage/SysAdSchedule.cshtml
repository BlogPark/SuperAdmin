@model SuperAdmin.WebUI.Areas.SysAdvertisement.Models.SysAdScheduleViewModel
@{
    Layout = "~/Views/_Layout.cshtml";
}
<div class="container">
    <div class="row">
        <div id="content" class="col-lg-12">
            <!-- PAGE HEADER-->
            <div class="row">
                <div class="col-sm-12">
                    <div class="page-header">
                        <!-- BREADCRUMBS -->
                        <ul class="breadcrumb">
                            <li>
                                <i class="fa fa-home"></i>
                                <a href="index.html">Home</a>
                            </li>
                            <li>
                                <a href="#">广告设置</a>
                            </li>
                            <li>广告排期</li>
                        </ul>
                        <!-- /BREADCRUMBS -->
                        <div class="clearfix">
                            <h3 class="content-title pull-left">广告排期</h3>
                        </div>
                        <div class="description"></div>
                    </div>
                </div>
            </div>
            <!-- /PAGE HEADER -->
            <div class="row">
                <div class="col-sm-11">
                    <div class="btn-group hidden-xs pull-right invoice-btn-group">
                        <p class="btn-toolbar">
                            <a class="btn btn-primary" data-toggle="modal" href="@Url.Action("AddSysSchedule", "SysAdManage", new { area = "SysAdvertisement" })" id="addnew" ><i class="fa fa-plus"></i>&nbsp;增加排期</a>
                        </p>
                    </div>
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="row" id="tabdiv">
                        <table class="table table-striped table-bordered" id="menutab">
                            <thead>
                                <tr>
                                    <th class="text-center">编        号</th>
                                    <th class="text-center">名        称</th>
                                    <th class="text-center">开始时间</th>
                                    <th class="text-center">结束时间</th>
                                    <th class="text-center">客户名称</th>
                                    <th class="text-center">添  加  人</th>
                                    <th class="text-center">添加时间</th>
                                    <th class="text-center">状        态</th>
                                    <th class="text-center">编        辑</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.schedules)
                                {
                                    <tr id="tr@(item.ID)" class="text-center">
                                        <td>@item.ID</td>
                                        <td>@item.ScheduleName</td>
                                        <td>@item.StarTime</td>
                                        <td>@item.EndTime</td>
                                        <td>@item.ClientName</td>
                                        <td>@item.AddUserName</td>
                                        <td>@item.AddTime</td>
                                        <td name="@(item.SeStatus)">
                                            @item.SeStatusName
                                        </td>
                                        <td>
                                            <p class="btn-toolbar">
                                                <button class="btn btn-warning" data-toggle="modal"><i class="fa fa-pencil-square-o"></i>&nbsp;详 情</button>
                                                <a class="btn btn-warning" data-toggle="modal" href="@Url.Action("UpdateSysSchedule", "SysAdManage", new { area = "SysAdvertisement", aid = item.ID })" ><i class="fa fa-pencil-square-o"></i>&nbsp;修 改</a>
                                                <button class="btn btn-danger" onclick="delad(@item.ID)" ><i class="fa fa-times-circle"></i>&nbsp; 禁 用</button>
                                            </p>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section myscript{
    <script type="text/javascript">
        $(function () {
            App.init(); //Initialise plugins and elements
        });
        function delad(sid) {
            $.ajax({
                url: '@Url.Action("delesysschedule", "SysAdManage", new { area = "SysAdvertisement" })',
                dataType: 'Json',
                data: { 'sid': sid },
                type: 'POST',
                success: function (data) {
                    var str = ''; var img = '';
                    if (data == '1') {
                        var id = $("#tr" + aid + " td:nth-child(8)").attr("name");
                        if (id == '0') {
                            $("#tr" + aid + " td:nth-child(8)").attr("name", "1");
                            $("#tr" + aid + " td:nth-child(8)").html("启用");
                        }
                        else {
                            $("#tr" + aid + " td:nth-child(8)").attr("name", "0");
                            $("#tr" + aid + " td:nth-child(8)").html("禁用");
                        }
                        str = "操作成功！";
                        img = '/img/gritter/success.jpg';
                    }
                    else {
                        str = "操作失败！";
                        img = '/img/gritter/error.png';
                    }
                    setTimeout(function () {
                        var unique_id = $.gritter.add({
                            // (string | mandatory) the heading of the notification
                            title: str,
                            // (string | mandatory) the text inside the notification
                            text: '',
                            // (string | optional) the image to display on the left
                            image: img,
                            // (bool | optional) if you want it to fade out on its own or just sit there
                            sticky: true,
                            // (int | optional) the time you want it to be alive for before fading out
                            time: '',
                            // (string | optional) the class name you want to apply to that specific message
                            class_name: 'my-sticky-class'
                        });
                        // You can have it return a unique id, this can be used to manually remove it later using
                        setTimeout(function () {
                            $.gritter.remove(unique_id, {
                                fade: true,
                                speed: 'slow'
                            });
                        }, 3000);
                    }, 0);
                }
            });
        }
    </script>
}